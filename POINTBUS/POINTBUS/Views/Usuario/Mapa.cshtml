
@{
    ViewBag.Title = "Mapa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="indigo accent-1" id="paginaMapa">
    <div class="row container">
        <div class="input-field col s5">
            <input id="origem" type="text" class="white" value="@ViewBag.Usuario.CepCasa" placeholder="Digite seu local de origem">
        </div>
        <div class="col s2"></div>
        <div class="input-field col s5">
            <input id="destino" type="text" class="white" value="@ViewBag.Usuario.CepTrabalho" placeholder="Digite seu local de destino">
        </div>
    </div>

    <div class="row container">
        <div class="col s1"></div>
        <button class="waves-effect waves-light btn col s3 white-text" style="background-color: #A239CA" type="submit" onclick="chamarLocalizacaoAtual()"> Usar localização atual <!-- botao ir de onde está o usuário (geolacalização) --></button>
        <div class="col s4"></div>
        <button class="waves-effect waves-light btn col s3 white-text" style="background-color: #A239CA" id="b" type="submit" onclick="initMap()"> Buscar rota </button> <!-- botao ir de onde está escrito -->
        <div class="col s1"></div>
    </div>

    <div id="map" class="container z-depth-4"></div>

    <div class="row">
        <div class="col s6">
            <div class="col s4"></div>
            <div class="card-panel col s6 pink darken-1 z-depth-5" style="background-color: #4717F6">
                <span class="white-text" id="CO2"> </span>
            </div>
            <div class="col s2"></div>
        </div>

        <div class="col s6">
            <div class="col s2"></div>
            <div class="card-panel col s6 pink darken-1 z-depth-5" style="background-color: #A239CA">
                <span class="white-text" id="total"> </span>
            </div>
            <div class="col s4"></div>
        </div>
    </div>
    

    <div class="row container">
        <div class="col s2"></div>
        <div id="right-panel" class="card-panel z-depth-5 col s8" style="background-color: #ad51d0">
            <!-- painel par colocar a rota -->
        </div>
        <div class="col s2"></div>
    </div>

</div>


